pipeline {

      agent {

        label 'Agent-1'
      }
    

   options {
       
       timeout(time: 120, unit: 'SECONDS')
   }
    stages {
        stage('Build') {
            steps {
                sh 'echo This is Build'
                
            }
        }
        stage('Test') {
            steps {
                sh 'echo This is test'
                
            }
        }
        stage('Deploy') {
            
            steps {

                    sh 'echo This is deploy'
                    //error 'pipeline failed'

            }
        }

    }

}    
     
    

